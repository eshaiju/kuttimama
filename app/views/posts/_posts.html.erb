<div class="grid-block">
	<ul>
		<%
		if @posts
		 for post in @posts do 
		  %>
		  <% cache post do%>
		<li>
		    <%= link_to image_tag(post.image.url(:medium), :alt => post.title),post_path(post.title) %>
			<div class="action">
				<a href="<%= post.image.url(:medium) %>" download><i class="fa fa-cloud-download"></i></a>
				<i class="fa fa-copy"></i>
				<i class="fa fa-facebook"></i>
			</div>
			<!-- <div class="title"><%= post.title %></div> -->
		</li>
		<% end %>
		<% 
		end
		else
		 %>
		 <div class="color-grey">No posts available<div>
		 <% end %>

	</ul>
	<br class="clearfix">
</div>
<div class="bottom-pagination">
	 <%= paginate @posts , :remote => true %>
</div>
